	.data
	.align 2
timstr:	.ascii "text more text lots of text\0"
	.text
main:
	la $a0,0x10010000
	li $v0,0xaa
	sb $v0,5($a0)
	li $a1,0x00001653
	andi $a1,0xFFFF		# sanitize register a1 so that only the 4 LSB are present
	move $t0, $a0		# temporarily store the adress in a0 to t0 as a0 is used as the input for hexasc
	
	srl $a0,$a1,12
	jal hexasc
	sb $v0,1($t0)
	
	move $a0, $v0
	li $v0, 11

	syscall
	
stop:	j	stop		# stop after one run
	nop	
	
hexasc:
	andi $a0,$a0,0xF	# bitmask. bitwise AND so that only the 4 lsb are left
	addi $v0,$a0,0x30	# add 0x30 so that they line up with the ASCII codes for 0 to 9
	jr $ra			# jump back to stored address in main	